<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("_head") %>
</head>
<body>

  <%- include("_header") %> 

  <div class="container">
    <% if (role === "index") { %>
      <h1>Categorias</h1>
      <section id="categories">
        <div class="row">
          <% categories.forEach(category => { %>
            <div class="col-3">
              <a href="/category/<%= category.id %>/products">
                <div class="card">
                  <img src="/images/<%= category.image %>" class="card-img-top" alt="...">
                  <div class="card-body">
                    <h5 class="card-title"><%= category.name %></h5>
                  </div>
                </div>
              </a>
            </div>
          <% }); %>
        </div>
      </section>
    <% } %> 
  
    <% if (role === "products") { %>
      <h1>Produtos</h1>
      <section id="products">
        <div class="row">
          <% products.forEach(product => { %>

            <div class="col-3">
              <div class="card">
                <img src="/images/<%= product.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= product.name %></h5>
                  <p><%= product.price %></p>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </section>
    <% } %> 
  
    <% if (role === "detail") { %>
      <section id="detail">
        <h2><%= product.name %></h2>
        <p><%= product.price %></p>
      </section>
    <% } %> 
  </div>

</body>
</html>